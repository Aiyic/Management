
@model IEnumerable<Management.Models.Goods.Goods>

@{
    ViewBag.Title = "查找";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-bottom:70px">查找</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="padding-left:300px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="GoodsName">商品名称</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line valid" data-val="false" id="GoodsName" name="GoodsName" type="text" value="" aria-describedby="GoodsName-error" aria-invalid="false">
                <span class="text-danger field-validation-valid" data-valmsg-for="GoodsName" data-valmsg-replace="true"></span>
            </div>
        </div>
    </div>
    <hr />
    <div align="center">
        <input type="submit" value="查找" class="btn btn-default" />

        <a href="~/Operation/Borrow" class="btn btn-default" style="margin-left:100px">借用</a>
        <a href="~/Operation/Return" class="btn btn-default">归还</a>

    </div>
}

<hr />

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GoodsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodsNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodsPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodsType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodsBuyTime)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsBuyTime)
            </td>
            <td>
                @Html.ActionLink("详情", "Details", "Goods", new { id = item.GoodsId }, null)
            </td>
        </tr>
        }
    </table>
}

<hr />



<p style="text-align:center">
    <button type="button" class="btn btn-outline-primary">@Html.ActionLink("返回主页", "Index")</button>
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
