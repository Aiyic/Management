
@{
    ViewBag.Title = "主页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-bottom:70px">主页</h2>


@if (Session["CurrentUserId"] == null || Session["CurrentUserIsAdminister"] == null)
{
    <hr />
    <p style="text-align:center">
        <button type="button" class="btn btn-outline-primary" style="font-size:24px; width:400px; height:100px">@Html.ActionLink("请先登录", "Login", "Home")</button>
    </p>
}
else
{
    <hr />
    <p style="text-align:center">
        <button type="button" class="btn btn-outline-primary" style="font-size:24px; width:200px; height:100px">@Html.ActionLink("借用", "Borrow")</button>&nbsp;&nbsp;
        <button type="button" class="btn btn-outline-primary" style="font-size:24px; width:200px; height:100px">@Html.ActionLink("归还", "Return")</button>
    </p>
    <p style="text-align:center">
        <button type="button" class="btn btn-outline-primary" style="font-size:24px; width:200px; height:100px">@Html.ActionLink("查找", "Search")</button>&nbsp;&nbsp;
        <button type="button" class="btn btn-outline-primary" style="font-size:24px; width:200px; height:100px">@Html.ActionLink("个人记录", "PersonRecord")</button>
    </p>
    <p style="text-align:center">
    </p>
}
